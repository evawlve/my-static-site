---
export let title: string = "Default Title";
export let description: string = "Default Description";
---
<article class="card">
  <h2>{title}</h2>
  <p>{description}</p>
</article>

<style>
  .card {
    border: 1px solid #ddd;
    padding: 1rem;
    border-radius: 8px;
    background-color: white; /* Ensure a visible background */
    color: black; /* Ensure text is visible */
  }
</style>

